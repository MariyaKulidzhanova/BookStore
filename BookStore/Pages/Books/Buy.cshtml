@page "{id:int?}"
@model BookStore.Pages.Books.BuyModel

@{
    ViewData["Title"] = "Buy";
}

<h3>Do you want to buy this book?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Date)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Book.ID" />
        <input type="submit" value="Buy" class="btn btn-success" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
